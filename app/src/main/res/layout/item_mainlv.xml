<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <cn.jzvd.JzvdStd
        android:id="@+id/item_main_jzvd"
        android:layout_width="match_parent"
        android:layout_height="220dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/item_main_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/item_main_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_main_iv"
            android:text="iAkie"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/item_main_tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_main_tv_name"
            android:layout_alignLeft="@id/item_main_tv_name"
            android:text="不知名小码农"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/item_main_tv_heart"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1234"
            android:textSize="12dp"
            android:layout_centerInParent="true"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/icon_heart"/>
        <TextView
            android:id="@+id/item_main_tv_reply"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_main_tv_heart"
            android:layout_marginRight="10dp"
            android:text="4567"
            android:textSize="12dp"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/icon_comment"/>

    </RelativeLayout>
</LinearLayout>